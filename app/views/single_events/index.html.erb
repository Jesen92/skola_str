
<%= grid(@event_grid) do |g| 

	g.column name: "ID", attribute: 'id' do |t|
		t.id
	end

	g.column name: "Naziv", attribute: 'title' do |t|
		t.title
	end

	g.column name: "Grupa" do |t|
		if t.group != nil
		link_to(t.group.name, grupa_path(t.id))
		else
			"Nema grupe"
		end
	end

	g.column name: "Datum predavanja", attribute: 'date',ordering: true do |t|
		t.date.to_date.strftime(" %d.%m.%Y.")
	end

	g.column name: "Početak predavanja", attribute: 'start' do |t|
		t.start
	end

	g.column name: "Kraj predavanja", attribute: 'end' do |t|
		t.end
	end

	g.column name: "Upisano predavanje", attribute: 'odrzano' do |t|
		t.odrzano? ? "Yes" : "No"
	end

	g.column do |t|
		link_to("Stranica predavanja", event_path(t.id))
	end

end -%>