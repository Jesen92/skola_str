<style>
p.prikaz{
	font-weight: bold;
}
</style>
<h2><%= @ucenik.name %></h2>
	<ul>
		<li><p class="prikaz">OIB:</p> <%= @ucenik.OIB %><p></p></li>
		<li><p class="prikaz">Adresa:</p> <%= @ucenik.adresa %><p></p></li>
		<% if @ucenik.parents_name? %>
		<li><p class="prikaz">Ime Roditelja:</p> <%= @ucenik.parents_name %><p></p></li>
		<% end %>
		<li><p class="prikaz">Broj telefona/mobitela:</p> <%= @ucenik.tel %><p></p></li>
		<li><p class="prikaz">e-mail:</p> <%= @ucenik.email %></li>
	</ul>

<%= grid(@ucenik_grid, show_filters: :always) do |g| 

	g.column name: "ID", attribute: 'id'  do |t|
		t.id
	end

	g.column name: "Grupa", attribute: 'name', custom_filter: :auto , model: Group do |t|
		if t.group != nil
		 t.group.name#link_to(t.group.name, grupa_path(t.id))
		else
			"Nema grupe"
		end
	end

	g.column name: "Mjesec", attribute: 'date', ordering: true, custom_filter: :auto  do |t|
		t.date.strftime(" %m.%Y. ")
	end

	g.column name: "Plaćeno", attribute: 'uplaceno'  do |t|
		t.uplaceno? ? "Da" : "Ne"
	end

	g.column name: "Uplata(kn)", attribute: 'uplata' do |t|
		t.uplata
	end

	g.column do |t|
		link_to("Plaćanje", uplata_path(t.id))
	end

end-%>
