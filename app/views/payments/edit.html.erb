<div class="panel panel-default">
	<div class="panel-heading"><h2>Plaćanje</h2></div>
		<div class="panel-body">
		<div class="well well-lg">
			<%= semantic_form_for @payment do |f| %>
				<%= f.inputs do %>
				<div id="section-details">
					<%= f.input :uplaceno, :label => "Uplaćeno", :input_html => {:class => 'form-control'}  %></br>

					<%= f.input :uplata, :label => "Uplata(kn)", :input_html => {:class => 'form-control'} %></br>					
				</div>
				<% end %>
				
				<%= f.actions do %>

					<%= f.action :submit, :as => :button, :button_html => {:class => 'btn btn-primary'}%></br>
			      	<%= f.action :cancel, :as => :link, :button_html => {:class => 'btn btn-default'} %>
			    
			    <% end %>
			<% end %>
			</div>
	</div>
</div>